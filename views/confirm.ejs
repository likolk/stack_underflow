<!-- Confirm new Password page -->
<%- include ('includes/head') %>
<div class="row mt-5">
    <div class="col-md-7 m-auto">
        <div class="card card-body">
            <h1 class="text-center mb-5"><i class="fas fa-sign-in-alt"></i> Confirm New Password</h1>
            <%- include('./partials/messages.ejs'); -%>
            <form action="/users/confirm" method="POST">
                <!-- create 2 form entries -->
                <div class="form-group">
                    <label for="password">Password</label>
                    <input type="password" id="password" name="password" class="form-control"
                           placeholder="Create Password" value="<%= typeof password != 'undefined' ? password : '' %>" />
                </div>
                <div class="form-group">
                    <label for="password2">Confirm Password</label>
                    <input type="password" id="password2" name="password2" class="form-control"
                           placeholder="Confirm Password"
                           value="<%= typeof password2 != 'undefined' ? password2 : '' %>" />
                </div>

                <button type="submit" class="btn btn-primary btn-block">Reset</button>
            </form>
        </div>
    </div>
</div>


